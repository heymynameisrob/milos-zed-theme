{
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "ui_font_family": ".SystemUIFont",
  "theme": {
    "mode": "dark",
    "light": "Milos Light",
    "dark": "Milos"
  },
  "tab_size": 2,
  "indent_guides": {
    "enabled": true
  },
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 2.0
  },
  "show_edit_predictions": false,
  "inlay_hints": {
    "enabled": false
  },
  "gutter": {
    "line_numbers": true,
    "folds": true
  },
  "format_on_save": "on",
  "scrollbar": {
    "show": "never"
  },

  "title_bar": {
    "show_branch_icon": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },

  "project_panel": {
    "dock": "right",
    "default_width": 320,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },

  "agent_ui_font_size": 16,
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "model": "claude-sonnet-4-5-latest",
      "provider": "anthropic"
    },
    "dock": "left",
    "default_width": 360
  },

  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 120,
      "show_wrap_guides": false
    }
  },

  "terminal": {
    "font_size": 16,
    "env": {
      "EDITOR": "zed --wait"
    },
    "font_family": "Berkeley Mono"
  },

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "importModuleSpecifierPreference": "non-relative"
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "non-relative"
          }
        }
      }
    }
  },

  "restore_on_startup": "last_workspace",
  "confirm_quit": false,

  "formatter": {
    "external": {
      "command": "prettier",
      "arguments": ["--stdin-filepath", "{buffer_path}"]
    }
  }
}
